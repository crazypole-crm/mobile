<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cc="clr-namespace:CrazyPoleMobile.MVVM.Views.CustomControls"
             xmlns:vm="clr-namespace:CrazyPoleMobile.MVVM.ViewModels"
             x:DataType="vm:HomePageViewModel"
             x:Class="CrazyPoleMobile.MVVM.Views.HomePage">

    <Grid ColumnDefinitions="*"
          ColumnSpacing="5"
          RowDefinitions="60,*"
          RowSpacing="30">

        <VerticalStackLayout Grid.Row="1"
                             Padding="25"
                             Spacing="25">
            <HorizontalStackLayout Spacing="10">
                <Label Text="Избранное"
                       Style="{StaticResource FontBaseStyle}"
                       FontSize="28"/>
                <Image Source="star.png" 
                       HeightRequest="30"
                       WidthRequest="30"/>
            </HorizontalStackLayout>
            <CollectionView BackgroundColor="Red"
                            HeightRequest="100"
                            ItemsLayout="HorizontalList">
                <CollectionView.ItemTemplate>
                    <DataTemplate >
                        <Border>
                            <Label Style="{StaticResource FontBaseStyle}"
                                   Text="hello"/>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label Text="Направления"
                       Style="{StaticResource FontBaseStyle}"
                       FontSize="28"/>

            <CollectionView BackgroundColor="Green"
                            HeightRequest="100">

            </CollectionView>


        </VerticalStackLayout>


        <Label HorizontalOptions="Center" 
                   VerticalOptions="Center"
                   Style="{StaticResource HeaderText}" 
                   Text="Направления" />
        <Grid RowDefinitions="*,40"
              Grid.Row="1"
              Padding="0, 0, 0, 105">
            
        </Grid>
    </Grid>


</ContentPage>