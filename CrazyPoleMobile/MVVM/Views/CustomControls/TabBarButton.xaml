<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:b="clr-namespace:CrazyPoleMobile.Behaviors"
             xmlns:cc="clr-namespace:CrazyPoleMobile.MVVM.Views.CustomControls"
             x:Name="this"
             x:Class="CrazyPoleMobile.MVVM.Views.CustomControls.TabBarButton">

    <Border BindingContext="{x:Reference this}"
            x:Name="Brdr"
            StrokeShape="{Binding Shape}"
            Padding="{Binding PaddingBorder}"
            Stroke="{Binding CurrentBorderBrush}"
            StrokeThickness="{Binding StrokeThickness}"
            BackgroundColor="Transparent"
            HeightRequest="70"
            WidthRequest="70">

        <ImageButton x:Name="Btn"
                     VerticalOptions="Fill"
                     HorizontalOptions="Fill"
                     Padding="{Binding PaddingImage}"
                     Command="{Binding Command}"
                     CommandParameter="{Binding CommandParameter}">
            <ImageButton.Behaviors>
                <b:ImageButtonAnimationBehavior />
            </ImageButton.Behaviors>
        </ImageButton>
    </Border>

</ContentView>
