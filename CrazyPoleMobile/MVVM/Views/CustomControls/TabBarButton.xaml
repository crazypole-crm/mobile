<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:b="clr-namespace:CrazyPoleMobile.Behaviors"
             x:Name="this"
             x:Class="CrazyPoleMobile.MVVM.Views.CustomControls.TabBarButton">

    <Border BindingContext="{x:Reference this}" 
            StrokeShape="{Binding Shape}"
            Padding="{Binding PaddingBorder}"
            Stroke="{Binding StrokeBrush}"
            StrokeThickness="{Binding StrokeThickness}"
            BackgroundColor="Transparent">

        <ImageButton x:Name="Btn" Source="{Binding Source}"
                     Background="{Binding ImageBgBrush}"
                     Padding="{Binding PaddingImage}"
                     Command="{Binding Command}"
                     CommandParameter="{Binding CommandParameter}">
            <ImageButton.Behaviors>
                <b:ColorFilterBehavior ColorFilter="{AppThemeBinding Dark={StaticResource IconFilterDark}, Light={StaticResource IconFilterLight}}"/>
                <b:ImageButtonAnimationBehavior />
            </ImageButton.Behaviors>
        </ImageButton>
    </Border>

</ContentView>
