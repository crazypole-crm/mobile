<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="CrazyPoleMobile.MVVM.Views.CustomControls.GradientField">

    <Border BindingContext="{x:Reference this}" Padding="10" 
            Background="{AppThemeBinding Dark={StaticResource ClarifiedBlack}, Light={StaticResource White}}" 
            StrokeThickness="2"
            Stroke="{StaticResource DefaultGradient}">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="15"/>
        </Border.StrokeShape>
        <Entry Placeholder="{Binding Placeholder}" VerticalOptions="Center" />
    </Border>

    
</ContentView>
