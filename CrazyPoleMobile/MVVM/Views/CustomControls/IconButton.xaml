<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CrazyPoleMobile.MVVM.Views.CustomControls"
             xmlns:b="clr-namespace:CrazyPoleMobile.Behaviors"
             x:Name="this"
             x:Class="CrazyPoleMobile.MVVM.Views.CustomControls.IconButton">

    <Border BindingContext="{x:Reference this}"
            StrokeThickness="2"
            Stroke="{StaticResource Gray600}"
            BackgroundColor="{AppThemeBinding Light={ StaticResource White },
                                              Dark={ StaticResource ClarifiedBlack}}">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="15" />
        </Border.StrokeShape>

        <ImageButton Source="{Binding Source}"
                     Padding="10">
            <ImageButton.Behaviors>
                <b:ImageButtonAnimationBehavior />
            </ImageButton.Behaviors>
            
        </ImageButton>
    </Border>
</ContentView>
