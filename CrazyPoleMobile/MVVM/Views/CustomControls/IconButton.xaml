<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CrazyPoleMobile.MVVM.Views.CustomControls"
             x:Name="this"
             x:Class="CrazyPoleMobile.MVVM.Views.CustomControls.IconButton">

    <Border BindingContext="{x:Reference this}"
            StrokeThickness="5"
            Stroke="{StaticResource Gray600}"
            BackgroundColor="{AppThemeBinding Light={ StaticResource White },
                                              Dark={ StaticResource ClarifiedBlack}}">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="25" />
        </Border.StrokeShape>
        
        <ImageButton Scale="4"
                     Source="{Binding Source}"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"/>
    </Border>
</ContentView>
