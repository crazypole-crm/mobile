<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct ="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:cc="clr-namespace:CrazyPoleMobile.MVVM.Views.CustomControls"
             x:Class="CrazyPoleMobile.MVVM.Views.SettingsPage">
    <VerticalStackLayout Spacing="10" Margin="19,0">
        <Label HorizontalOptions="Center" 
               HeightRequest="40"
               Style="{StaticResource HeaderText}" 
               Margin="0,10,0,36" 
               Text="Настройки"  />
        
        <Border HeightRequest="60" Style="{StaticResource BorderedFrame}" >
            <Grid Padding="0" 
                  ColumnDefinitions="30, *, 40"  
                  Margin="15, 0, 20, 0">
                <Image Grid.Column="0" 
                       HorizontalOptions="Center" 
                       Source="{AppThemeBinding 
                    Light={cc:ImageResource Source=bell_icon_black.png}, 
                    Dark={cc:ImageResource Source=bell_icon_white.png}}" 
                       Style="{StaticResource SettingsImage}">
                </Image>
                <Label Grid.Column="1" 
                       Margin="10, 0, 0, 0" 
                       VerticalTextAlignment="Center" 
                       Style="{StaticResource MainFrameText}" 
                       Text="Оповещения" />
                <Switch Grid.Column="2" />
            </Grid>
        </Border>

                <Border HeightRequest="60" Style="{StaticResource BorderedFrame}" >
            <Grid Padding="0" 
                  ColumnDefinitions="30, *, 40"  
                  Margin="15, 0, 20, 0">
                <Image Grid.Column="0" 
                       HorizontalOptions="Center" 
                       Style="{StaticResource SettingsImage}" 
                       Source="{AppThemeBinding 
                    Light={cc:ImageResource Source=dark_mode_icon_black.png}, 
                    Dark={cc:ImageResource Source=dark_mode_icon_white.png}}" />
                <Label Grid.Column="1" 
                       Margin="10, 0, 0, 0" 
                       VerticalTextAlignment="Center" 
                       Style="{StaticResource MainFrameText}"  
                       Text="Темная тема" />
                <Switch Grid.Column="2" />
            </Grid>
        </Border>

        <Border HeightRequest="60" Style="{StaticResource BorderedFrame}" >
            <Grid Padding="0" 
                  ColumnDefinitions="30, *, 40"  
                  Margin="15, 0, 20, 0">
                <Image Grid.Column="0" 
                       HorizontalOptions="Center" 
                       Style="{StaticResource SettingsImage}" 
                       Source="{AppThemeBinding 
                    Light={cc:ImageResource Source=telegram_icon_black.png}, 
                    Dark={cc:ImageResource Source=telegram_icon_white.png}}" />
                <Label Grid.Column="1" 
                       Margin="10, 0, 0, 0" 
                       VerticalTextAlignment="Center" 
                       Style="{StaticResource MainFrameText}"  
                       Text="Telegram" />
            </Grid>
        </Border>

        <Border HeightRequest="60" Style="{StaticResource BorderedFrame}" >
            <Grid Padding="0" 
                  ColumnDefinitions="30, *, 40"  
                  Margin="15, 0, 20, 0">
                <Image Grid.Column="0" 
                       HorizontalOptions="Center" 
                       Style="{StaticResource SettingsImage}" 
                       Source="{AppThemeBinding 
                    Light={cc:ImageResource Source=vk_icon_black.png}, 
                    Dark={cc:ImageResource Source=vk_icon_white.png}}" />
                <Label Grid.Column="1" 
                       Margin="10, 0, 0, 0" 
                       VerticalTextAlignment="Center" 
                       Style="{StaticResource MainFrameText}"  
                       Text="Группа ВК" />
            </Grid>
        </Border>

        <Border HeightRequest="60" Style="{StaticResource BorderedFrame}" >
            <Grid Padding="0" 
                  ColumnDefinitions="30, *, 40"  
                  Margin="15, 0, 20, 0">
                <Image Grid.Column="0" 
                       HorizontalOptions="Center"
                       Style="{StaticResource SettingsImage}"
                       Source="{AppThemeBinding 
                    Light={cc:ImageResource Source=watsapp_icon_black.png}, 
                    Dark={cc:ImageResource Source=watsapp_icon_white.png}}" />
                <Label Grid.Column="1" 
                       Margin="10, 0, 0, 0" 
                       VerticalTextAlignment="Center" 
                       Style="{StaticResource MainFrameText}"  
                       Text="WhatsApp" />
            </Grid>
        </Border>

        <Border HeightRequest="60" Style="{StaticResource BorderedFrame}" >
            <Grid Padding="0" 
                  ColumnDefinitions="30, *, 40"  
                  Margin="15, 0, 20, 0">
                <Image Grid.Column="0" 
                       HorizontalOptions="Center" 
                       Style="{StaticResource SettingsImage}" 
                       Source="{AppThemeBinding 
                    Light={cc:ImageResource Source=website_icon_black.png}, 
                    Dark={cc:ImageResource Source=website_icon_white.png}}" />
                <Label Grid.Column="1" 
                           Margin="10, 0, 0, 0" 
                           VerticalTextAlignment="Center" 
                           Style="{StaticResource MainFrameText}"  
                           Text="Веб-сайт" />
            </Grid>
        </Border>
        <Border Style="{StaticResource SmallButton}">
            <Label HorizontalTextAlignment="Center" 
                   VerticalTextAlignment="Center" 
                   Style="{StaticResource SmallButtonText}" 
                   Text="Выйти" />
        </Border>
    </VerticalStackLayout>
</ContentPage>