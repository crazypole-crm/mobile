<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:CrazyPoleMobile.MVVM.Views.Components" 
             x:Class="CrazyPoleMobile.MVVM.Views.NotificationPage">
    <Grid ColumnDefinitions="*"
          ColumnSpacing="5"
          RowDefinitions="40,auto"
          RowSpacing="30">
        <Label Grid.Column="1" 
               Grid.Row="0" 
               HorizontalOptions="Center" 
               Style="{StaticResource HeaderText}" 
               Text="Оповещения" />
        
        <Grid Padding="19, 0" Grid.Column="1" Grid.Row="1">
            <components:NotificationFrame />
        </Grid>
    </Grid>
</ContentPage>